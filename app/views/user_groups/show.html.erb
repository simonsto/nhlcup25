<h2>🏅 Team Leaderboard</h2>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>User</th>
      <th>Score</th>
    </tr>
  </thead>
  <tbody>
    <% @group_users.each_with_index do |user, index| %>
      <tr <%= "style='background-color: #ffffdd;'" if user == current_user %>>
        <td><%= index + 1 %></td>
        <td><%= user.username || user.email %></td>
        <td><%= user.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>
